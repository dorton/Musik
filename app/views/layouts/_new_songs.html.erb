<div class="col-md-7">
  <h3 class="font-thin">New Songs</h3>
  <div class="row row-sm">
    <% tracks.each do |track| %>
      <div class="col-xs-6 col-sm-3">
        <div class="item">
          <div class="pos-rlt">
            <div class="item-overlay opacity r r-2x bg-black">
              <div class="center text-center m-t-n">
                <a href="#"><i class="fa fa-play-circle i-2x"></i></a>
              </div>
            </div>
            <a href="#"><%= image_tag track.user.avatar_url, class: 'r r-2x img-full' %></a>
          </div>
          <div class="padder-v">
            <a href="#" class="text-ellipsis"><%= track.title %></a>
            <a href="#" class="text-ellipsis text-xs text-muted"><%= track.user.username %></a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
